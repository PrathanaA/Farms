<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >


        <LinearLayout
            android:id="@+id/back_feed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_filter_state"
            >


            <ImageView
                android:id="@+id/b_arrow"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_close_black"
                style="@style/SelectableItemBackground"
                android:background="?attr/selectableItemBackgroundBorderless"

                />

        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="80"
        android:background="#fff"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:background="#ffff"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Farm Details"
                android:textSize="20dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adding your farm details helps us recommend  the right opportunities of your farm"
                android:textSize="14dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/farm_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Farm Name*"
                android:textSize="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyz   ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="25dp"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/cont_person_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Person Name*"
                android:textSize="12dp"
                android:digits="abcdefghijklmnopqrstuvwxyz ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:paddingRight="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/mobile_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number*"
                android:textSize="12dp"
                android:maxLength="10"
                android:inputType="number"
                android:paddingRight="10dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="25dp"
                android:textColor="#000"
                />







        </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="#fff"
        android:orientation="vertical"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e6e6e6"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:gravity="right"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            >
            <!--<TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip"
                android:layout_gravity="right"
                android:textColor="#000"
                android:textSize="14dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />-->
            <TextView
                android:id="@+id/continue_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:textColor="#fff"
                android:background="@drawable/border_filled_red"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>