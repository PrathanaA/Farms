<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="vertical"
            >


                    <LinearLayout
                        android:id="@+id/back_feed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:background="@drawable/ic_filter_state"
                        >


                        <ImageView
                            android:id="@+id/b_arrow"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_close_black"
                            style="@style/SelectableItemBackground"
                            android:background="?attr/selectableItemBackgroundBorderless"

                            />

                    </LinearLayout>
        </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginHorizontal="10dp"
        android:orientation="vertical"
        android:weightSum="100">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="#ffff">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Where is your farm located ?"
                android:textSize="20dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Adding your farm location helps us recommend the right opportunities around you."
                android:textSize="14dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="10dp"
                android:textColor="#000"
                />


            <TextView
                android:id="@+id/current_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" USE CURRENT LOCATION"
                android:textSize="12dp"
                android:fontFamily="@font/segoeui"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:drawableLeft="@drawable/ic_gps_pin"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="@drawable/border_red"

                />

            <EditText
                android:id="@+id/current_adds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                android:fontFamily="@font/segoeui"
                android:textSize="12dp"
                android:textColor="#000"/>


            <TextView
                android:id="@+id/set_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" CURRENT LOCATION"
                android:textSize="12dp"

                android:fontFamily="@font/segoeui"
                android:layout_marginTop="20dp"
                android:textColor="#000"
                android:padding="10dp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:background="@drawable/border"

                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <EditText
                android:id="@+id/street_add"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address line"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:textSize="12dp"
                android:background="@android:color/transparent"
                android:maxLength="30"
                android:layout_marginLeft="6dp"
                android:paddingRight="10dp"
                android:backgroundTint="#d3d3d3"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_marginHorizontal="5dp"/>

            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="State*"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:longClickable="false"
                android:fontFamily="@font/segoeui"
                android:editable="false"
                android:backgroundTint="#dcdcdc"

                android:textColor="#000"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#dcdcdc"
                android:layout_marginHorizontal="5dp"/>


            <EditText
                android:id="@+id/district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="District*"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:background="@android:color/transparent"
                android:focusable="false"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:fontFamily="@font/segoeui"
                android:editable="false"
                android:backgroundTint="#dcdcdc"

                android:textColor="#000"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
            android:background="#dcdcdc"/>

            <EditText
                android:id="@+id/taluk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Taluk*"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:editable="false"
                android:focusable="false"
                android:background="@android:color/transparent"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="6dp"
                android:backgroundTint="#dcdcdc"
                android:longClickable="false"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="#dcdcdc"/>

            <EditText
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Area*"
                android:focusable="false"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="6dp"
                android:drawableRight="@drawable/ic_drop_down_arrow"
                android:textSize="12dp"
                android:editable="false"
                android:backgroundTint="#dcdcdc"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"

                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="#dcdcdc"/>


            <!--<TextView-->
                <!--android:id="@+id/village"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="Select Village"-->
                <!--android:drawableRight="@drawable/ic_drop_down_arrow"-->
                <!--android:textSize="12dp"-->
                <!--android:paddingRight="10dp"-->
                <!--android:editable="false"-->
                <!--android:paddingVertical="2dp"-->
                <!--android:background="@android:color/transparent"-->
                <!--android:layout_marginTop="20dp"-->
                <!--android:layout_marginLeft="6dp"-->
                <!--android:layout_marginHorizontal="5dp"-->
                <!--android:fontFamily="@font/segoeui"-->
                <!--android:textColor="#000"-->
                <!--/>-->

            <!--<View-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="1dp"-->
                <!--android:layout_marginHorizontal="5dp"-->
                <!--android:background="#dcdcdc"/>-->

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Pincode"
                android:paddingVertical="2dp"
                android:layout_marginTop="20dp"
                android:background="@android:color/transparent"
                android:layout_marginLeft="6dp"
                android:inputType="number"
                android:textSize="12dp"
                android:maxLength="6"
                android:backgroundTint="#dcdcdc"
                android:fontFamily="@font/segoeui"
                android:textColor="#000"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="5dp"
                android:background="#dcdcdc"/>

        </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical"
        android:gravity="bottom"
        >

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginBottom="10dp"
    android:background="#e6e6e6"
    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="right|bottom"
        android:layout_marginBottom="5dp"
        android:paddingVertical="5dp"
        android:orientation="horizontal"
        >
        <!--<TextView-->
            <!--android:id="@+id/skip"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Skip"-->
            <!--android:layout_gravity="right"-->
            <!--android:textColor="#000"-->
            <!--android:textSize="14dp"-->
            <!--android:paddingVertical="10dp"-->
            <!--android:paddingHorizontal="20dp"-->
            <!--/>-->

       <TextView
            android:id="@+id/continue_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:textColor="#fff"

            android:background="@drawable/border_filled_red"
            android:paddingVertical="10dp"
            android:paddingHorizontal="20dp"
            />
    </LinearLayout>

    </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>