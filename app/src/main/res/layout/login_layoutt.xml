<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layou1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#000">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_weight="20"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/farmer_nandi_logo"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:weightSum="100"
        android:background="#BF000000"
        android:gravity="start"
        android:layout_marginTop="10dp"
        android:layout_weight="80"
        >


        <TextView
            android:id="@+id/welcome_back"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:text="Sign in"
            android:layout_weight="10"
            android:fontFamily="@font/segoeui"
            android:paddingVertical="5dp"
            android:textSize="18dp"
            android:paddingLeft="5dp"
            android:textStyle="bold"
            android:textColor="#fff"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="15"
            android:background="@drawable/border_empty"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:textCursorDrawable="@drawable/cursor_color"
                app:theme="@style/MyStyle"
                android:textColorHint="#8c8c8c">

                <EditText
                    android:id="@+id/mob_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:hint="Mobile Number "
                    android:layout_marginHorizontal="20dp"
                    android:inputType="number"
                    android:maxLength="10"
                    android:paddingTop="10dp"
                    android:paddingBottom="20dp"
                    android:textColorHint="#8c8c8c"
                    android:cursorVisible="true"
                    android:background="@android:color/transparent"
                    android:singleLine="true"
                    android:textColor="#8c8c8c"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_weight="15"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/border_empty"
            >

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:textColorHint="#8a8b91"
                app:theme="@style/MyStyle"
                app:hintEnabled="true"
                app:hintAnimationEnabled="true"
                app:passwordToggleEnabled="true"
                app:passwordToggleTint="#8a8b91">


                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:layout_marginHorizontal="20dp"
                    android:inputType="textPassword"
                    android:maxLength="12"
                    android:paddingTop="5dp"
                    android:hint="Pasword"
                    android:paddingBottom="20dp"
                    android:textStyle="normal"
                    android:background="@android:color/transparent"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:textColor="#8c8c8c"
                    android:textColorHint="#8c8c8c"
                    android:textSize="14dp"
                    />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



        <TextView
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/border_filled_grey_black"
            android:fontFamily="@font/segoeui"
            android:gravity="center"
            android:layout_weight="16"
            android:paddingHorizontal="15dp"
            android:paddingVertical="18dp"
            android:text="LOGIN"
            android:textColor="#fff"
            android:textSize="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="20dp"
            android:weightSum="100"
            android:layout_weight="17"
            android:orientation="horizontal"
            >


            <CheckBox
                android:id="@+id/remember_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:buttonTint="#999999"
                android:layout_weight="45"
                android:text="Remember me"
                android:textStyle="bold"
                android:textColor="#8a8b91"
                android:textSize="15dp" />


            <TextView
                android:id="@+id/forgot_pass_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textStyle="bold"
                android:layout_weight="55"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="5dp"
                android:text="Forgot Password?"
                android:textColor="#8a8b91"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
            android:layout_weight="15"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/new_farmpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:text="New to FarmPe? "
                android:textColor="#8a8b91"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/create_acc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signup"
                android:fontFamily="@font/segoeui"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#fff"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="11"
            android:gravity="bottom|center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/change_lang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_filled_grey_black"
                android:drawableLeft="@drawable/ic_internet"
                android:drawableRight="@drawable/ic_down_arrow"
                android:drawablePadding="10dp"
                android:fontFamily="@font/segoeui"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:text="English"
                android:textColor="#fff"
                android:textSize="14dp" />


        </LinearLayout>




    </LinearLayout>

</LinearLayout>

